<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5494049082029237"
        crossorigin="anonymous"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>016 Empregos Franca</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="/public/planos.html" rel="planos">
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const menuBtn = document.getElementById("menu-btn");
            const closeBtn = document.getElementById("close-menu-btn");
            const mobileMenu = document.getElementById("mobile-menu");

            menuBtn.addEventListener("click", () => {
                mobileMenu.classList.remove("hidden");
            });

            closeBtn.addEventListener("click", () => {
                mobileMenu.classList.add("hidden");
            });
        });
    </script>
</head>

<body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">

    <!-- Header -->
    <header class="bg-white shadow-md w-full">
        <div class="container mx-auto flex justify-between items-center p-4">
            <div class="flex items-center space-x-3">
                <img src="/public/016empregos.jpg" alt="Logo" class="w-10 h-10">
                <div>
                    <h1 class="text-lg font-bold text-gray-800">016 Empregos Franca</h1>
                    <p class="text-sm text-gray-500">Conectando talentos e oportunidades</p>
                </div>
            </div>

            <!-- Desktop Buttons -->
            <div class="hidden md:flex items-center space-x-3">
                <a href="/planos.html"
                    class="bg-green-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-green-600">Anunciar</a>
                <a href="https://chat.whatsapp.com/FejC0MSgfOt6FlH9RSLVCs"
                    class="bg-green-100 text-green-700 px-4 py-2 rounded-lg font-medium hover:bg-green-200">Entrar no
                    Grupo</a>
            </div>

            <!-- Mobile Hamburger -->
            <button id="menu-btn" class="md:hidden text-gray-700 focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden fixed top-0 left-0 w-full h-full bg-white z-50 overflow-y-auto">
        <div class="p-4 space-y-4">
            <button id="close-menu-btn" class="float-right text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <div class="pt-8 flex flex-col space-y-3 border-b pb-4">
                <a href="/planos.html"
                    class="bg-green-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-green-600">Anunciar</a>
                <a href="https://chat.whatsapp.com/FejC0MSgfOt6FlH9RSLVCs"
                    class="bg-green-100 text-green-700 px-4 py-2 rounded-lg font-medium hover:bg-green-200">Entrar no
                    Grupo</a>
            </div>

            <!-- Filtro de cargos no mobile -->
            <div class="mt-4">
                <h2 class="text-lg font-semibold text-gray-700 mb-3 flex items-center">
                    <span class="mr-2">üîç</span> Filtrar por cargo
                </h2>
                <div class="max-h-64 overflow-y-auto border rounded-lg p-3 bg-gray-50">
                    <% const cargosUnicos=[...new Set(jobs.map(j=> j.title.trim()))]; %>
                        <% cargosUnicos.forEach(cargo=> { %>
                            <label class="flex items-center space-x-2 py-1">
                                <input type="checkbox" value="<%= cargo %>" class="cargo-checkbox">
                                <span>
                                    <%= cargo %>
                                </span>
                            </label>
                            <% }) %>
                </div>
            </div>

            <div class="mt-6 pt-4 border-t text-center text-gray-500 text-sm">
                ¬© <%= new Date().getFullYear() %> Empregos Franca ‚Äî Todos os direitos reservados
            </div>
        </div>
    </div>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 to-blue-500 text-white py-10 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-2">Vagas em Franca ‚Äî encontre sua pr√≥xima oportunidade</h2>
        <p class="text-blue-100 mb-5">Pesquise por cargo, empresa ou palavra-chave. Atualizado diariamente.</p>
        <div class="flex justify-center">
            <input type="text" id="search-input" placeholder="Ex: Atendente, auxiliar de produ√ß√£o, vendedor"
                class="w-3/4 md:w-1/3 px-4 py-2 rounded-l-lg text-gray-700 focus:outline-none">
            <button id="clear-btn" class="bg-blue-700 px-4 py-2 rounded-r-lg hover:bg-blue-800">Limpar</button>
        </div>
    </section>

    <!-- Conte√∫do Principal -->
    <main class="container mx-auto flex flex-col md:flex-row gap-6 p-4 flex-grow">

        <!-- Sidebar Desktop -->
        <aside class="hidden md:block md:w-1/4 bg-white rounded-2xl shadow-md p-4 h-fit">
            <h2 class="text-lg font-semibold text-gray-700 mb-3 flex items-center">
                <span class="mr-2">üîç</span> Filtrar por cargo
            </h2>
            <div class="max-h-80 overflow-y-auto border rounded-lg p-3 bg-gray-50">
                <% cargosUnicos.forEach(cargo=> { %>
                    <label class="flex items-center space-x-2 py-1">
                        <input type="checkbox" value="<%= cargo %>" class="cargo-checkbox">
                        <span>
                            <%= cargo %>
                        </span>
                    </label>
                    <% }) %>
            </div>
        </aside>

        <!-- Lista de vagas -->
        <section id="jobs-container" class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-4">
            <% jobs.forEach(job=> { %>
                <div class="bg-white p-5 rounded-2xl shadow-md hover:shadow-lg transition w-full relative">
                    <h3 class="text-lg font-semibold text-blue-700 mb-2">
                        <%= job.title %>
                    </h3>
                    <p class="text-gray-700 mb-3"><%- job.description %></p>

                    <% if (job.email || job.phone) { %>
                        <div class="flex flex-wrap gap-3 mb-3">
                            <% if (job.email) { %>
                                <a href="mailto:<%= job.email %>"
                                    class="text-blue-600 font-medium hover:underline break-all">
                                    <%= job.email %>
                                </a>
                                <% } %>
                                    <% if (job.phone) { %>
                                        <a href="https://wa.me/<%= job.phone.replace(/\D/g, '') %>" target="_blank"
                                            class="text-green-600 font-medium hover:underline break-all">
                                            <%= job.phone %>
                                        </a>
                                        <% } %>
                        </div>
                        <% } %>

                            <p class="text-sm text-gray-500 flex items-center space-x-1 mb-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 7V3m8 4V3m-9 8h10m-11 8h12a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                                <span>
                                    <%= job.date %>
                                </span>
                            </p>

                            <!-- Bot√£o Compartilhar -->
                            <button
                                class="share-btn bg-blue-600 text-white px-3 py-1 rounded-lg hover:bg-blue-700 text-sm"
                                onclick="shareJob('<%= encodeURIComponent(job.title) %>')">Compartilhar</button>
                </div>
                <% }) %>
        </section>
    </main>

    <!-- Rodap√© -->
    <footer class="bg-white border-t text-center text-gray-500 py-4 mt-auto">
        ¬© <%= new Date().getFullYear() %> Empregos Franca ‚Äî Todos os direitos reservados.
    </footer>

    <script>
        // Fun√ß√£o compartilhar vaga
        function shareJob(title) {
            const url = window.location.href + "?vaga=" + title;
            if (navigator.share) {
                navigator.share({
                    title: 'Vaga: ' + decodeURIComponent(title),
                    url: url
                }).catch(console.error);
            } else {
                navigator.clipboard.writeText(url).then(() => {
                    alert('Link copiado: ' + url);
                });
            }
        }

        const checkboxes = document.querySelectorAll('.cargo-checkbox');
        const cards = document.querySelectorAll('#jobs-container > div');
        const searchInput = document.getElementById('search-input');

        function filterCards() {
            const searchTerm = searchInput.value.toLowerCase();
            const ativos = Array.from(checkboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.value);

            cards.forEach(card => {
                const titulo = card.querySelector('h3').innerText.toLowerCase();
                const descricao = card.querySelector('p').innerText.toLowerCase();
                const matchSearch = titulo.includes(searchTerm) || descricao.includes(searchTerm);
                const matchCheckbox = ativos.length === 0 || ativos.includes(card.querySelector('h3').innerText);
                card.style.display = matchSearch && matchCheckbox ? '' : 'none';
            });
        }

        // Eventos
        searchInput.addEventListener('input', filterCards);
        checkboxes.forEach(cb => cb.addEventListener('change', filterCards));
        document.getElementById('clear-btn').addEventListener('click', () => {
            searchInput.value = '';
            checkboxes.forEach(cb => cb.checked = false);
            filterCards();
        });
    </script>

</body>

</html>